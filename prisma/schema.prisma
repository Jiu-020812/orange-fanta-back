generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        Int      @id @default(autoincrement())
  name      String
  size      String
  imageUrl  String?
  createdAt DateTime @default(now())
  records   Record[]
}

model Record {
  id     Int      @id @default(autoincrement())
  itemId Int
  price  Int
  count  Int
  date   DateTime @default(now())
  item   Item     @relation(fields: [itemId], references: [id])
}
