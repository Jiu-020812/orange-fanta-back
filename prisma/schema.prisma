generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ItemCategory {
  SHOE
  FOOD
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 

  // 관계
  items   Item[]
  records Record[]
}

model Item {
  id        Int          @id @default(autoincrement())

  name      String
  size      String
  imageUrl  String?
  category  ItemCategory @default(SHOE)

  // ✅ IndexedDB 로컬 id (마이그레이션용)
  legacyId   String?

  createdAt DateTime     @default(now())

  // FK
  userId Int
  user   User   @relation(fields: [userId], references: [id])

  // 관계 (Record 쪽과 1:N)
  records Record[]

  // ✅ 같은 유저의 같은 카테고리에서 legacyId로 정확히 매칭
  @@unique([userId, category, legacyId])
}

model Record {
  id    Int      @id @default(autoincrement())
  price Int
  count Int      @default(1)
  date  DateTime

  // FK
  userId Int
  user   User @relation(fields: [userId], references: [id])

  itemId Int
  item   Item @relation(fields: [itemId], references: [id])
}