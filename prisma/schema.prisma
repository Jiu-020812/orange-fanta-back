generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ItemCategory {
  SHOE
  FOOD
}

enum RecordType {
  IN   // 매입
  OUT  // 출고(판매/출고)
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 관계
  items   Item[]
  records Record[]
}

model Item {
  id        Int          @id @default(autoincrement())

  name      String
  size      String
  imageUrl  String?
  category  ItemCategory @default(SHOE)

  // ✅ IndexedDB 로컬 id (마이그레이션용)
  legacyId  String?

  createdAt DateTime     @default(now())
  memo      String?

  // FK
  userId Int
  user   User   @relation(fields: [userId], references: [id])

  // 관계 (Record 쪽과 1:N)
  records Record[]

  // ✅ 같은 유저의 같은 카테고리에서 legacyId로 정확히 매칭
  @@unique([userId, category, legacyId])
}

model Record {
  id    Int        @id @default(autoincrement())

  // ✅ 추가: 매입/출고 구분
  type  RecordType @default(IN)

  // ✅ 기존 그대로 사용:
  // IN  -> 매입 단가
  // OUT -> 판매 단가(출고 단가)
  price Int

  count Int        @default(1)
  date  DateTime

  // (선택) 출고 메모/판매처 등
  memo  String?

  // FK
  userId Int
  user   User @relation(fields: [userId], references: [id])

  itemId Int
  item   Item @relation(fields: [itemId], references: [id])
}
